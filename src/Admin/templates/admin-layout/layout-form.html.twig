<form  method="post">
  <div class="form-group">
    <label for="name">Name</label>
    <input type="text" class="form-control" id="name" placeholder="Name" name='name' value="{{ layout.name }}">
  </div>
  <div class="form-group">
    <label for="content">Content</label>
    <textarea class="form-control" rows="18" id="content" placeholder="Content" name='content'>{{ layout.content}}</textarea>
  </div>
  <button type="submit" class="btn btn-default">Submit</button>
</form>
